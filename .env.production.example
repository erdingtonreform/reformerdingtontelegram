GROUP_FORUM_ID="-1001234567890"
GROUP_OPS_ID="-1001234567891"
GROUP_COMMITTEE_ID="-1001234567892"
GROUP_APPROVALS_ID="-1001234567893"

# ==========================================
# TELEGRAM BUTTON URLS
# ==========================================
TELEGRAM_VOLUNTEER_URL="https://reformerdingtontelegram-admin.fly.dev/volunteer"
TELEGRAM_CALENDAR_URL="https://calendar.google.com/event?id=your_event_id"
TELEGRAM_DIRECTIONS_URL="https://maps.google.com/?q=Erdington+Birmingham"

# ==========================================
# AUTHENTICATION
# ==========================================
NEXTAUTH_SECRET="your_32_character_random_secret_here"
NEXTAUTH_URL="https://reformerdingtontelegram-admin.fly.dev"

# ==========================================
# TWO-FACTOR AUTHENTICATION
# ==========================================
# Leave empty for initial setup, populate as admins enable 2FA
TWO_FA_SECRETS='{}'

# ==========================================
# AWS S3 CONFIGURATION (For file uploads)
# ==========================================
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="eu-west-2"
S3_BUCKET="reformerdingtontelegram-media"
S3_ENDPOINT="https://s3.eu-west-2.amazonaws.com"
S3_PUBLIC_URL="https://s3.eu-west-2.amazonaws.com/reformerdingtontelegram-media"

# ==========================================
# OPTIONAL: EXTERNAL MEMBERSHIP CHECK
# ==========================================
EXTERNAL_CHECK_URL="https://your-membership-system.com/check?membership="

# ==========================================
# PRODUCTION SECURITY SETTINGS
# ==========================================
NODE_ENV="production"
LOG_LEVEL="info"

# ==========================================
# RATE LIMITING CONFIGURATION
# ==========================================
# These are handled by code but can be overridden via environment
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60"  # seconds
AUTH_RATE_LIMIT_MAX="5"
AUTH_RATE_LIMIT_WINDOW="900"  # 15 minutes in seconds