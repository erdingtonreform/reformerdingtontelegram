# ==========================================
# TELEGRAM CONFIGURATION
# ==========================================
TELEGRAM_BOT_TOKEN="your_production_bot_token_here"
PUBLIC_BASE_URL="https://reformerdingtontelegram-api.fly.dev"

# ==========================================
# ADMIN CONFIGURATION
# ==========================================
